<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentang\nAplikasi"
            android:layout_margin="20dp"
            android:textSize="50sp"
            android:textStyle="bold"
            android:id="@+id/tvTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aplikasi Data Alumni dibuat khusus untuk memudahkan lembaga pendidikan dalam mengelola dan memantau informasi alumni secara efektif. Dilengkapi dengan berbagai fitur lengkap, aplikasi ini memungkinkan pengguna untuk menyimpan, memperbarui, dan mengakses data alumni dengan cepat dan mudah serta efisien"
            android:layout_margin="20dp"
            android:textSize="16sp"
            android:layout_marginTop="100dp"
            android:justificationMode="inter_word"/>

    </LinearLayout>

</FrameLayout>